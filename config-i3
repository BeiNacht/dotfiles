new_window 1pixel
new_float 1pixel
hide_edge_borders smart
set $mod Mod4
font pango:xos4 Terminus Regular 10
floating_modifier $mod
gaps inner 5
smart_gaps on

bindsym $mod+Shift+Return exec rofi -show run
bindsym $mod+Return exec mate-terminal
bindsym $mod+Shift+c kill
bindsym $mod+s exec /home/bernd/.bin/rofi-power
bindsym $mod+Shift+s restart
bindsym $mod+Shift+a reload
bindsym --whole-window $mod+button2 floating toggle
bindsym $mod+f fullscreen toggle
bindsym $mod+d layout toggle split
bindsym $mod+space focus mode_toggle
bindsym $mod+z layout tabbed
bindsym $mod+x exec "notify-send Time $(date '+%H:%M')"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume 0 +5%"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume 0 -5%"
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle && notify-send Mute $(pactl list sinks | grep -E Mute | cut -d ' ' -f2)"
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+l exec xscreensaver-command -lock
bindsym $mod+k workspace next
bindsym $mod+j workspace prev
bindsym $mod+Tab workspace next
bindsym $mod+Shift+m move workspace to output right
bindsym $mod+m bar mode toggle
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+c [ urgent=latest ] focus

for_window [class="[.]*"] floating enable

bindsym $mod+q workspace 1; exec "notify-send  1"
bindsym $mod+w workspace 2; exec "notify-send  2"
bindsym $mod+e workspace 3; exec "notify-send  3"
bindsym $mod+r workspace 4; exec "notify-send  4"
bindsym $mod+t workspace 5; exec "notify-send  5"
bindsym $mod+y workspace 6; exec "notify-send  6"
bindsym $mod+u workspace 7; exec "notify-send  7"
bindsym $mod+i workspace 8; exec "notify-send  8"
bindsym $mod+o workspace 9; exec "notify-send  9"
bindsym $mod+p workspace 10; exec "notify-send  10"

# move focused container to workspace
bindsym $mod+Shift+q move container to workspace 1; workspace 1; exec "notify-send  1"
bindsym $mod+Shift+w move container to workspace 2; workspace 2; exec "notify-send  2"
bindsym $mod+Shift+e move container to workspace 3; workspace 3; exec "notify-send  3"
bindsym $mod+Shift+r move container to workspace 4; workspace 4; exec "notify-send  4"
bindsym $mod+Shift+t move container to workspace 5; workspace 5; exec "notify-send  5"
bindsym $mod+Shift+y move container to workspace 6; workspace 6; exec "notify-send  6"
bindsym $mod+Shift+u move container to workspace 7; workspace 7; exec "notify-send  7"
bindsym $mod+Shift+i move container to workspace 8; workspace 8; exec "notify-send  8"
bindsym $mod+Shift+o move container to workspace 9; workspace 9; exec "notify-send  9"
bindsym $mod+Shift+p move container to workspace 10; workspace 10; exec "notify-send  10"

client.focused          #A6A6A6 #A6A6A6 #1c1c1c #000000
client.focused_inactive #4c4c4c #4c4c4c #ffffff #000000
client.unfocused        #1c1c1c #1c1c1c #4c4c4c #000000

bar {
    position          top
    mode              hide
    modifier          none
    workspace_buttons yes
    tray_output       primary

    font pango:xos4 Terminus Regular 10

    colors {
        background #000000
        statusline #ffffff

        focused_workspace  #1c1c1c #000000
        active_workspace   #A6A6A6 #A6A6A6
        inactive_workspace #4c4c4c #000000
    }
}
