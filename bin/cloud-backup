#!/bin/sh
cd ~
borg create \
    --verbose \
    --filter AME \
    --list \
    --stats \
    --show-rc \
    --compression lz4 \
    --exclude-caches \
    --exclude '*/node_modules/*' \
    cloud-backup::'{now:%Y-%m-%d_%H:%M}' \
    Documents \
    Desktop \
    Data \
    Backup \
    Workspace \
    Pictures

borg prune \
    --verbose \
    --stats \
    --list \
    cloud-backup \
    --keep-daily=7 \
    --keep-weekly=4 \
    --keep-monthly=6